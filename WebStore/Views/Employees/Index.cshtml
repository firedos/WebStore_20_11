@model IEnumerable<Employee>

@{
    //ViewData["Title"] = "Index";
    ViewBag.Title = "Сотрудники";
}

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <table class="table table-bordered" id="employees-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.SurName</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.Patronymic</td>
                    <td>@emp.Age</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Details" asp-route-Id="@emp.Id">Карточка</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

